<!-- Options: http://logback.qos.ch/manual/layouts.html -->
<configuration scan="true" scanPeriod="5 seconds">
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%highlight(%-5level) %logger: %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

    <logger name="hyperfiddle.electric-ring-adapter3" level="WARN" additivity="false"><appender-ref ref="STDOUT" /></logger>
    <logger name="hyperfiddle.electric.shadow-cljs.hooks3" level="DEBUG" additivity="false"><appender-ref ref="STDOUT" /></logger>
    <logger name="org.eclipse.jetty" level="WARN" additivity="false"><appender-ref ref="STDOUT" /></logger>
    <logger name="datomic" level="WARN" additivity="false"><appender-ref ref="STDOUT" /></logger>

    <logger name="io.undertow" level="WARN" additivity="false"><appender-ref ref="STDOUT" /></logger>
    <logger name="org.jboss" level="WARN" additivity="false"><appender-ref ref="STDOUT" /></logger>
    <logger name="org.xnio" level="WARN" additivity="false"><appender-ref ref="STDOUT" /></logger>
</configuration>
